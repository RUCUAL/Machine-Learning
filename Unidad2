        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Tamaño de X_train: (2400, 7)\n",
            "Tamaño de X_test: (600, 7)\n"
          ]
        }
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "# Inicializar el escalador\n",
        "scaler = StandardScaler()\n",
        "\n",
        "# Ajustar el escalador SÓLO con los datos de entrenamiento\n",
        "scaler.fit(X_train)\n",
        "\n",
        "# Transformar los datos de entrenamiento y prueba\n",
        "X_train_scaled = scaler.transform(X_train)\n",
        "X_test_scaled = scaler.transform(X_test)"
      ],
      "metadata": {
        "id": "RjutRRuojzrK"
      },
      "execution_count": 5,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# 1. Inicializar y entrenar el modelo con los datos escalados\n",
        "rlm = LinearRegression()\n",
        "rlm.fit(X_train_scaled, Y_train)\n",
        "\n",
        "# 2. Realizar predicciones\n",
        "Y_pred_train_rlm = rlm.predict(X_train_scaled)\n",
        "Y_pred_test_rlm = rlm.predict(X_test_scaled)\n",
        "\n",
        "# 3. Evaluar el rendimiento\n",
        "r2_train_rlm = r2_score(Y_train, Y_pred_train_rlm)\n",
        "r2_test_rlm = r2_score(Y_test, Y_pred_test_rlm)\n",
        "\n",
        "# 4. Mostrar Coeficientes (para la interpretación)\n",
        "coeficientes = pd.DataFrame({\n",
        "    'Variable': X_vars_ejecucion1,\n",
        "    'Coeficiente': rlm.coef_\n",
        "}).sort_values(by='Coeficiente', ascending=False)\n",
        "\n",
        "print(\"--- Regresión Lineal Múltiple (Ejecución 1) ---\")\n",
        "print(f\"R² (Entrenamiento): {r2_train_rlm:.4f}\")\n",
        "print(f\"R² (Prueba): {r2_test_rlm:.4f}\")\n",
        "print(\"\\nTop 3 Coeficientes (Interpretación vs. Predicción):\")\n",
        "print(coeficientes.head(3))\n",
        "print(coeficientes.tail(3))"
      ],
